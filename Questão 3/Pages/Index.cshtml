@page
@model CalculoAreaFuncWeb.Pages.IndexModel
@{
    ViewData["Title"] = "Cálculo de Área de um Retângulo";
}

<h2>Cálculo de Área de um Retângulo</h2>

<form method="post">
    <div>
        <label>Base (em metros): </label>
        <input type="number" step="0.1" asp-for="BaseRetangulo" required />
    </div>

    <div>
        <label>Altura (em metros): </label>
        <input type="number" step="0.1" asp-for="AlturaRetangulo" required />
    </div>

    <div>
        <button type="submit">Calcular Área</button>
    </div>
</form>

@if (Model.Area > 0)
{
    <h3>A área do retângulo é: @Model.Area metros quadrados</h3>
}