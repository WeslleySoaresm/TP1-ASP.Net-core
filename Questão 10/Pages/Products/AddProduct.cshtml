@page
@model ProductCatalog.Pages.Products.AddProductModel
@{
    ViewData["Title"] = "Adicionar Produto";
}

<h1>Adicionar Produto</h1>

<form method="post">
    <div>
        <label>Nome:</label>
        <input asp-for="Product.Name" />
    </div>
    <div>
        <label>Preço:</label>
        <input asp-for="Product.Price" type="number" step="0.01" />
    </div>
    <button type="submit">Cadastrar</button>
</form>

@if (Model.Product != null)
{
    <div style="margin-top:20px;">
        <h2>Produto Cadastrado:</h2>
        <p><strong>Nome:</strong> @Model.Product.Name</p>
        <p><strong>Preço:</strong> R$ @Model.Product.Price</p>
    </div>
}
