@page
@model StringManipulationWeb.Pages.IndexModel
@{
    ViewData["Title"] = "Manipulação de Strings";
}

<h1>Transformação de Nome e Sobrenome</h1>

<form method="post">
    <div>
        <label for="firstName">Nome:</label>
        <input type="text" id="firstName" name="firstName" required />
    </div>

    <div>
        <label for="lastName">Sobrenome:</label>
        <input type="text" id="lastName" name="lastName" required />
    </div>

    <button type="submit">Transformar</button>
</form>

@if (Model.Result != null)
{
    <div style="margin-top:20px;">
        <h3>Resultado:</h3>
        <p><strong>Concatenado:</strong> @Model.Result.ConcatResult</p>
        <p><strong>Maiúsculas:</strong> @Model.Result.UppercaseResult</p>
        <p><strong>Sem Espaços:</strong> @Model.Result.NoSpaceResult</p>
    </div>
}
